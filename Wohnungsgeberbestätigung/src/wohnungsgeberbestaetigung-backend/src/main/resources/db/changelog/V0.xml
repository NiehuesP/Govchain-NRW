<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">
    <changeSet id="0" author="regioit">
        <createSequence sequenceName="hibernate_sequence" startValue="1"/>
        <createTable tableName="wohnungsgeberbestaetigung">
            <column name="id" type="bigint">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_wohnungsgeberbestaetigung"/>
            </column>
            <column name="name_beauftragt" type="varchar(255)"/>
            <column name="wohnort_beauftragt" type="varchar(255)"/>
            <column name="name_eigentuemer" type="varchar(255)"/>
            <column name="wohnort_eigentuemer" type="varchar(255)"/>
            <column name="name_wohnungsgeber" type="varchar(255)"/>
            <column name="wohnort_wohnungsgeber" type="varchar(255)"/>
            <column name="adresse" type="varchar(255)"/>
            <column name="einzugsbestaetigung" type="varchar(255)"/>
            <column name="tag_des_einzugs" type="datetime2"/>
            <column name="connection_id" type="varchar(255)"/>
            <column name="accepted" type="boolean"/>
        </createTable>
        <createTable tableName="app_user">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_user"/>
            </column>
            <column name="username" type="varchar(255)"/>
            <column name="password" type="varchar(255)"/>
            <column name="role_name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <loadData tableName="app_user"
                  separator=";"
                  file="db/data/users.csv"/>
    </changeSet>
</databaseChangeLog>
